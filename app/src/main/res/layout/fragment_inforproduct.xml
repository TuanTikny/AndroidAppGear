<LinearLayout android:id="@+id/layout_sanpham"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_hinhsp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="150dp"
                android:padding="5dp"
                android:layout_height="150dp" />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="2dp"
        android:background="@drawable/line_sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_tensp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="name"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_giasp"
                android:gravity="center"
                android:textSize="30sp"
                android:text="999999"
                android:textColor="#ff625d"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <ru.katso.livebutton.LiveButton
            android:id="@+id/btn_chonmua"
            android:layout_marginTop="10dp"
            android:text="    Đặt Mua"
            android:textSize="16sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#313131"
            app:backgroundColor="#fff200"
            app:shadowColor="#FFCACACA"
            app:normalHeight="5dp"
            app:corners="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_tieude"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Số lượng"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_soluong"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="02"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>